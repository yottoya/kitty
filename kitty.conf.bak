# BEGIN_KITTY_THEME
# Tokyo Night
include current-theme.conf
# END_KITTY_THEME

# background_image $HOME/Documents/wallpapers/lightbulb.jpg
# background_image_layout cscaled
# background_tint 0.9

font_family Hack
font_size 14
bold_font        auto
italic_font      auto
bold_italic_font auto

# Cursor
cursor_blink_interval 0.5

# Use `kitten show_key -m kitty` to get the key code
map ctrl+backspace send_text all \x1b[127;5uap alt+backspace      send_text all \x1b\x7f

allow_remote_control yes

hide_window_decorations yes

window_border_width 0

draw_minimal_borders yes

window_padding_width 6

map ctrl+shift+r send_text xdg --run kitty &

